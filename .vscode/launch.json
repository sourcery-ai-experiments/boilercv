{
  "version": "0.2.0",
  "inputs": [
    {
      "id": "input",
      "type": "promptString",
      "description": "Input arguments."
    }
  ],
  "configurations": [
    {
      "name": "Python: Sphinx build docs",
      "type": "debugpy",
      "request": "launch",
      "module": "sphinx",
      "args": ["-EaT", "docs", "_site"],
      "console": "internalConsole"
    },
    {
      "name": "Python: WRITE",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "internalConsole",
      "justMyCode": true,
      "env": {
        "BOILERCV_DEBUG": "True",
        "BOILERCV_WRITE": "True"
      }
    },
    {
      "name": "Python: PREVIEW",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "internalConsole",
      "justMyCode": true,
      "env": {
        "BOILERCV_DEBUG": "True",
        "BOILERCV_PREVIEW": "True"
      }
    },
    {
      "name": "Automatic Python/C++ debugging for OpenCV in WSL",
      "type": "auto-debug",
      "request": "launch",
      "map": {
        "*.py": "Python: Current file, OpenCV debug",
        "*": "C++"
      }
    },
    {
      "name": "Python: Current file, OpenCV debug",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "stopOnEntry": true,
      "justMyCode": true,
      "env": {
        "OPENCV_LOG_LEVEL": "DEBUG"
      }
    },
    {
      "name": "C++",
      "type": "cppdbg",
      "request": "attach",
      "program": "${workspaceFolder}/.venv/bin/python",
      "processId": "${command:pickProcess}",
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Python: Current file",
      "type": "debugpy",
      "request": "launch",
      // "purpose": ["debug-in-terminal", "debug-test"],
      "program": "${file}",
      "console": "internalConsole",
      "env": {
        "BOILERCV_DEBUG": "True",
        "BOILERCV_PREVIEW": "True"
      }
    },
    {
      "name": "Python: Current file (interactive terminal)",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "env": {
        "BOILERCV_DEBUG": "True",
        "BOILERCV_PREVIEW": "True"
      }
    },
    {
      "name": "Python: Current file with args",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "args": ["${input:input}"],
      "console": "internalConsole",
      "env": {
        "BOILERCV_DEBUG": "True",
        "BOILERCV_PREVIEW": "True"
      }
    },
    {
      "name": "Python: Current file with `--overwrite`",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "args": ["--overwrite"],
      "console": "internalConsole",
      "env": {
        "BOILERCV_DEBUG": "True",
        "BOILERCV_PREVIEW": "True"
      }
    },
    {
      "name": "PowerShell: Launch Current File",
      "type": "PowerShell",
      "request": "launch",
      "script": "${file}",
      "cwd": "${cwd}"
    },
    {
      //? Needs to be "pytest" adapter for now.
      //? "debugpy" adapter isn't seen, to toggle "justMyCode" in test configuration
      //? https://github.com/microsoft/vscode-python-debugger/issues/112
      //? https://github.com/microsoft/vscode-python-debugger/issues/94
      "name": "pytest",
      //! Uncomment below to disable "justMyCode" when debugging. Comment out after.
      // "purpose": ["debug-test"],
      //!
      "presentation": {
        "hidden": true
      },
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "internalConsole",
      "justMyCode": false,
      "env": {
        "BOILERCV_DEBUG": "True",
        "BOILERCV_PREVIEW": "True"
      }
    }
  ]
}
